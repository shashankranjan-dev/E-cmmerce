<script>
  const validate = (values) => {
    const errors = {};
    if (!values.productName) {
      alert("Need");
      errors.productName = "This field of  is Required";
    }
    if (!values.color) {
      errors.color = "This field of  is Required";
    }

    if (!values.category) {
      errors.category = "This field of  is Required";
    }
    if (!values.price) {
      errors.price = "This field of  is Required";
    }

    return errors;
  };
</script>

